!!!
%html{ lang: 'en' }
  %head
    / meta
    %meta{ charset: 'utf-8' }
    %meta(http-equiv='X-UA-Compatible' content='IE=edge')
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1' }
    = csrf_meta_tags

    / stylesheets
    = stylesheet_link_tag :application, media: :all

    / HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    / WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
      = javascript_include_tag '//oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js'
      = javascript_include_tag '//oss.maxcdn.com/respond/1.4.2/respond.min.js'

    / favicon
    = favicon_link_tag 'favicon'

    %title Virtual Job Fair
  %body{ class: body_class }
    .wrapper
      = render 'navbar'
      = notice
      = alert
      %main
        = yield
      = render 'footer'

    / javascripts
    = javascript_include_tag '//cdn.jsdelivr.net/lodash/4.17.4/lodash.min.js'
    = yield :javascripts
    = javascript_include_tag :application
